<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ docTitle }}</title>
    <link rel="stylesheet" href="{{ asset('bundles/fixturesdocumentation/css/bootstrap.min.css') }}">
    <style>
        @import url('https://fonts.googleapis.com/css?family=Roboto');

        body {
            font-family: 'Roboto', sans-serif;
            color: #FFF;
            background-color: #181b1f;
        }

        h1 {
            margin-top: 50px;
        }

        h2 {
            margin-top: 50px;
        }

        .list-group {
            margin-bottom: 50px;
        }

        .list-group-item, .modal-body {
            color: #FFF;
            background-color: #212529;
            border-color: #32383e;
        }

        .list-group-item:hover {
            color: #FFF;
            background-color: #2c3034;
        }

        #return-to-top {
            position: fixed;
            bottom: 20px;
            left: 20px;
            background: #212529;
            width: 50px;
            height: 50px;
            display: block;
            text-decoration: none;
            border-radius: 35px;
        }
        #return-to-top:after {
            content: '';
            display: block;
            position: absolute;
            left: 10px;
            top: 15px;
            width: 0;
            height: 0;
            border-style: solid;
            border-width: 0 15px 15px 15px;
            border-color: transparent transparent #FFF transparent;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <h1 class="text-center">{{ docTitle }}</h1>

        {% if not doc is empty %}
            <div class="row">
                <aside class="col-md-2">
                    {% if canReload %}
                        <h3 class="text-center">Actions</h3>
                        <nav class="list-group">
                            <a href="#" onclick="reload()" class="list-group-item list-group-item-action">Reload data</a>
                        </nav>
                    {% endif %}

                    <h3 class="text-center">Contents</h3>
                    <nav class="list-group">
                        {% for section in doc.sections %}
                            <a href="#{{ section.title }}" class="list-group-item list-group-item-action">{{ section.title }}</a>
                        {% endfor %}
                    </nav>
                </aside>

                <section class="col-md-10">
                    {% for section in doc.sections %}
                        <article id="{{ section.title }}">
                            <h2>{{ section.title }}</h2>

                            <table class="table table-striped table-bordered table-hover table-dark">
                                <thead>
                                    <tr>
                                    {% for header in section.headers %}
                                        <th>{{ header|capitalize }}</th>
                                    {% endfor %}
                                    </tr>
                                </thead>
                                <tbody>
                                {% for fixture in section.fixtures %}
                                    <tr>
                                        {% for value in fixture %}
                                            <td>{{ value }}</td>
                                        {% endfor %}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </article>
                    {% endfor %}
                </section>
            </div>
        {% endif %}
    </div>

    <a href="#" id="return-to-top"></a>

    <div class="modal fade" tabindex="-1" role="dialog" id="reloadModal">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <p class="text-center" style="margin-top: 10px;">Reloading data...</p>
                </div>
            </div>
        </div>
    </div>

    <script src="{{ asset('bundles/fixturesdocumentation/js/jquery-3.3.1.slim.min.js') }}"></script>
    <script src="{{ asset('bundles/fixturesdocumentation/js/popper.min.js') }}"></script>
    <script src="{{ asset('bundles/fixturesdocumentation/js/bootstrap.min.js') }}"></script>
    <script>
        document.querySelector('#return-to-top').addEventListener('click', function() {
            window.scrollTo(0,0);
        });

        let reloadModal = $('#reloadModal');
        let reloadModalMsg =  reloadModal.find('p');
        reloadModal.modal({
            backdrop: 'static',
            show: false,
            keyboard: false
        });

        function sleep(ms) {
            return new Promise(resolve => setTimeout(resolve, ms));
        }

        async function reload() {
            reloadModal.modal('show');

            let response = await fetch('{{ path('fixtures_reload') }}');

            if (response.ok) {
                reloadModalMsg.html('Data reloaded.').addClass('text-success');
            } else {
                reloadModalMsg.html('An error occurred.').addClass('text-danger');
            }

            await sleep(2000);

            reloadModal.modal('hide');
        }

        reloadModal.on('hidden.bs.modal', function () {
            reloadModalMsg.html('Reloading data...').removeClass('text-success').removeClass('text-danger');
        });
    </script>
</body>
</html>
